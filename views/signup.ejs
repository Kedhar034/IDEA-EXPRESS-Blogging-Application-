<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Signup</title>
    <style>
        h1{
            padding:20px;
            align-content: center;
            align-content: center;
            display: flex;
            font: 200;
            font-style: bold;
        }
        .form-control{
            width: 250px;
            font: bold;
            border-color: black;
        }
        body{
            background-color: #2F4858;
            color: white;
            background-image: url('https://i.postimg.cc/T2rHVgZg/Good-things.png');
            background-size: cover;
            
        }
        .form-text{
            color:aliceblue;
        }
        .submit{
            background-color: rgb(16, 124, 197);
            color: white;
            font: 100;
            border-radius: 10px;
            padding: 3px;
        }
    </style>
</head>

<body>
    <%- include('./partials/nav') %>

    <div class="container">
        <form action="/user/signup" method="POST">
            <h1>SIGN  UP</h1>
            <div class="mb-3">
              <label for="fullname" class="form-label">Full Name</label>
              <input type="text" name="fullname" class="form-control" id="fullname" aria-describedby="fullname">
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email address</label>
                <input type="email" name="email" class="form-control" id="email" aria-describedby="email">
                <div id="emailHelp" class="form-text">Email will not be shared!</div>
              </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input type="password" name="password" class="form-control" id="password">
            </div>
            
            <button type="submit" class="submit">Submit</button>
        </form>

    </div>
    <%- include('./partials/script') %>
</body>
</html>